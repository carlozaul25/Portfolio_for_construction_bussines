<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <div>
        <div><%= blog.title %></div>
        <div><%= blog.body %></div>
        <div><%=distance_of_time_in_words(blog.created_at, Time.now) %> ago</div>
<strong><div><%= link_to blog.status, toggle_status_blog_path(blog)%></div></strong>
          <%= link_to 'Show', blog %>
          <%= link_to 'Edit', edit_blog_path(blog) %>   
        <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
